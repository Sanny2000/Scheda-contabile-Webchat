page{
  background-color: #EDECF1;
}
.header{
  height: 160rpx;
  background-color: #FFDC5C;
}
/* 内容区 */
.content{
  padding: 0 30rpx;
  margin-top: -100rpx;
}
/* 记账类型图标 */
.book-types{
  padding: 40rpx 0;
  /* height: 400rpx; */
  background-color: #fff;
  border-radius: 50rpx;
}
.types-title{
  width: 300rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  margin: 0 auto;
  border: 1px solid #FFDC5C;
  border-radius: 30rpx;
  overflow: hidden;
}
.title-item{
  width: 50%;
  text-align: center;
  font-size: 28rpx;
}
.title-item.active{
  font-weight: bold;
  background-color: #FFDC5C;
}
/* 轮播图 */
.swiper{
  height: 420rpx;
}
.swiper-item{
  /* !important  css的最高级 */
  height: 360rpx!important;
  display: flex;
  flex-wrap: wrap;
}
/* 单个图标 */
.swiper-icon{
  margin-top: 30rpx;
  width: 25%;
}
.icon-img{
  margin: 0 auto;
  width: 100rpx;
  height: 100rpx;
}
.icon-img image{
  width: 100%;
  height: 100%;
}
.icon-text{
  padding-top: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #BABABA;
}
/* 图标激活样式 */
.swiper-icon.active .icon-img{
  transform: scale(1.1);
}
.swiper-icon.active .icon-text{
  color: #000;
  font-weight: bold;
}

/* 账户选择 */
.account-box{
  background-color: #fff;
  margin-top: 30rpx;
  padding: 20rpx;
  border-radius: 30rpx;
}
.account-title{
  font-weight: bold;
  font-size: 58rpx;
  border-bottom: 1px solid #E9E9E9;
  padding-bottom: 20rpx;
}
.account-title .iconfont{
  font-size: 36rpx;
}
.account-type{
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.account-item{
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #EDECF1;
  padding: 0 20rpx;
  border-radius: 20rpx;
  color: #B0B0B0;
}
.account-item.active{
  background-color: #FFDC5C;
  color: #fff;
}


/* 记账信息 */
.info-item{
  margin-bottom: 10rpx;
  display: flex;
}
.info-title{
  width: 100rpx;
  font-size: 28rpx;
  text-align: center;
}
.info-inp{
  width: calc(100% - 100rpx);
}
/* 保存按钮 */
.save-box{
  width: 80%;
  background-color: #FFDC5C;
  text-align: center;
  padding:20rpx auto;
  margin: 50rpx auto;
  border-radius: 30rpx;
}